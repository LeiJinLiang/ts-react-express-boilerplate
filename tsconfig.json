{
    "compilerOptions": {
        "strict": true,     // 启用所有严格类型检查选项
       // "esModuleInterop" :true, 
        "sourceMap": true,  // 生成相应的 '.map' 文件
        "outDir": "./dist/",
        "noImplicitAny": true,
        //"module": "commonjs",  // 指定使用模块: 'commonjs', 'amd', 'system', 'umd' or 'es2015'
        "target": "es6",
        "jsx": "react",
        "lib": ["es5", "es2015", "es2016", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
    },
    "exclude": [
        "node_modules",
        "src"
    ],
}